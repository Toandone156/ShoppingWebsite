@page
@model ShoppingWebsite.Areas.Admin.Pages.Category.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<h1 class="h3 mb-4 text-gray-800">
    <a asp-page="Index" class="btn btn-secondary btn-icon-split mt-2">
        <span class="icon text-white-50">
            <i class="fas fa-backward"></i>
        </span>
        <span class="text font-weight-bold">Category Management</span>
    </a>
</h1>
<div class="card shadow mb-4 mx-auto" style="max-width: 500px;">
    <div class="card-header font-weight-bold text-primary py-3">
        Add Category
    </div>
    <div class="card-body row">
        <form class="mb-3 col-12" method="post">
            <div asp-validation-summary="ModelOnly" class="text-white"></div>
            <div class="form-group">
                <label asp-for="@Model.Category.Name"></label>
                <input asp-for="@Model.Category.Name" class="form-control" placeholder="Enter category name">
                <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="mt-3 font-weight-bold btn btn-success btn-block">Add new category</button>
            </div>
        </form>
    </div>
</div>